---
import Layout from "../../layouts/Layout.astro";
import NavbarComponent from "../../components/NavbarComponent.jsx";
import { Image, Link } from "@nextui-org/react";
import AuthorExpert from "../../components/author-expert.jsx";
import Card from "../../components/Card.jsx";
import Footer from "../../components/footer-landing.jsx";
---

<Layout title="Landing Page">
  <NavbarComponent client:load boldFirst="Pest" regularMiddle="Doc" boldLast="-AI" textColor="#0997B0" />
  <div class="flex items-center justify-center mt-5">
    <div class="w-full px-4">
      <div class="max-w-xl mx-auto text-center">
        <h1 class="text-2xl sm:text-3xl lg:text-4xl font-semibold">
          <span class="block sm:inline md:block lg:inline">Conversational AI:</span>
          <span class="text-[#0997B0]">
            <span class="block sm:inline md:block lg:inline">The Ultimate Solution</span>
            <span class="block sm:inline md:block lg:inline">for AI-powered Customer</span>
            <span class="block sm:inline md:block lg:inline">Experience</span>
          </span>
        </h1>
      </div>
    </div>
  </div>
  <div class="relative flex flex-col items-center">
    <div class="relative mt-5 mb-0 z-10">
      <Link color="foreground" href="#">
        <Image width={150} src="../assets/Google-Play.svg" client:visible />
      </Link>
    </div>
    <div class="relative mt-[-100px] z-0">
      <Image width={450} src="../assets/Hp.gif" client:visible />
    </div>
  </div>
  <div class="bg-[#006676] py-10">
    <h1 class="text-white font-bold flex justify-center mb-4">Point - point</h1>
    <Card client:load />
  </div>
  <div class="bg-[#EFEFEF] py-10">
    <h1 class="text-black flex justify-center font-semibold mb-4">Our Expert</h1>
    <AuthorExpert client:load />
  </div>
  <div class="bg-[#006676]">
    <Footer client:load />
  </div>
</Layout>
